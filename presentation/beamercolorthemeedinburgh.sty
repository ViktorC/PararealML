\definecolor{PMS311}{RGB}{12, 198, 222}   % light blue
\definecolor{PMS368}{RGB}{105, 190, 40}   % grass green

% Muted
\definecolor{PMS5005}{RGB}{182, 132, 140}
\definecolor{PMS483}{RGB}{103, 51, 39}   
