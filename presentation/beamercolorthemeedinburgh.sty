%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% In-presentation
\mode<presentation>

% TEXT
\setbeamercolor{normal text}{fg=UOEblue}      % normal text
\setbeamercolor{alerted text}{fg=UOEred}  % alerted text
\setbeamercolor{structure}{fg=UOEred}         % structure (bullet poits etc)
\setbeamercolor{example text}{fg=UOEcyan1}    % examples
\setbeamercolor{title}{fg=white, bg=PMS3025}  % title

%% NORMAL BLOCKS
\setbeamercolor{block title}{fg=white,bg=UOEblue1}  % Title colour
\setbeamercolor{block body}{parent=normal text, use=block title,bg=UOEblue2!50!bg} % Body colour

%% ALERT BLOCKS
\setbeamercolor{block title alerted}{bg=UOEdarkred, fg=white}
\setbeamercolor{block body alerted}{use=block title alerted,bg=block title alerted.bg!15!bg}

%% EXAMPLE BLOCKS
\setbeamercolor{block title example}{fg=white,bg=example text.fg}
\setbeamercolor{block body example}{use=block title example,bg=block title example.bg!15!bg}

% TABLE OF CONTENTS
\setbeamercolor{section in toc}{fg=UOEblue,bg=white}

% BEAMER PALETTE - used throughout higher-level themes
\setbeamercolor*{palette secondary}{fg=white,bg=PMS3025}  % blue
\setbeamercolor*{palette primary}{bg=PMS643,fg=PMS282} % light blue
\setbeamercolor*{palette tertiary}{bg=white, fg=PMS282} % white
\setbeamercolor*{palette quaternary}{bg=PMS282, fg=white} % blue

% BIBLIOGRAPHY
\setbeamercolor{bibliography entry author}{fg=UOEviolet}
\setbeamercolor{bibliography entry title}{fg=UOEblue}
\setbeamercolor{bibliography entry location}{fg=UOEblue3}

\setbeamercolor{section in head/foot}{bg=UOEblue1, fg=white}
\setbeamercolor{subsection in head/foot}{bg=UOEblue2, fg=UOEblue}

\setbeamercolor{frametitle}{bg=white, fg=UOEblue}
\setbeamercolor{frametitle right}{bg=UOEblue2}
\setbeamercolor{framesubtitle}{bg=white, fg=UOEviolet}

\mode<all>
