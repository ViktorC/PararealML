\colorlet{UOEviolet}{PMS2425}
\colorlet{UOEblue3}{PMS3135}
\colorlet{UOEblue4}{PMS311}
\colorlet{UOEgreen}{PMS368}
\colorlet{UOEbrown1}{PMS5005}
\colorlet{UOEbrown2}{PMS483}
\colorlet{UOEbrown3}{PMS7518}
\colorlet{UOEbrown4}{PMS391}
